<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#eeeeee">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Environment Sensor"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textColor="#484848"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp">

                    <RelativeLayout
                        android:id="@+id/text_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/air_index_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="30dp"
                            android:text="Air Quality Index"
                            android:textColor="#484848"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/keys"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/air_index_text_view"
                            android:layout_marginTop="40dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="15dp"
                                android:layout_marginBottom="5dp"
                                android:text="keys"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="12dp"
                                    android:layout_height="14dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="#D13535"></RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="#E07979"></RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="14dp"
                                    android:text="301-500"
                                    android:textColor="#656565"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="#F59300"></RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="#A8F59300"></RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="14dp"
                                    android:text="201-300"
                                    android:textColor="#656565"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="#E8C61A"></RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="#A8E8C61A"></RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="14dp"
                                    android:text="151-200"
                                    android:textColor="#656565"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="#7700FF"></RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="#A87700FF"></RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="14dp"
                                    android:text="101-150"
                                    android:textColor="#656565"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="#3583D1"></RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="#A83583D1"></RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="14dp"
                                    android:text="51-100"
                                    android:textColor="#656565"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="#35D15F"></RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="#a835D15F"></RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="14dp"
                                    android:text="0-50"
                                    android:textColor="#656565"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginTop="60dp"
                        android:layout_toEndOf="@id/text_content">

                        <me.itangqi.waveloadingview.WaveLoadingView
                            android:id="@+id/wave_progress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="70dp"
                            app:wlv_borderColor="#ffaa"
                            app:wlv_borderWidth="2dp"
                            app:wlv_progressValue="40"
                            app:wlv_round_rectangle="true"
                            app:wlv_shapeType="circle"
                            app:wlv_titleCenter="76"
                            app:wlv_titleCenterColor="@color/black"
                            app:wlv_titleCenterSize="30sp"
                            app:wlv_titleCenterStrokeWidth="3dp"
                            app:wlv_triangle_direction="north"
                            app:wlv_waveAmplitude="70"
                            app:wlv_waveColor="#0000ff"/>

                        <TextView
                            android:id="@+id/bottom_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/wave_progress"
                            android:textSize="18sp"
                            android:textColor="#484848"
                            android:text="Unhealthy for Sensitive Groups"/>

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/temperature_heading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Temperature"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"/>

                <com.github.mikephil.charting.charts.LineChart
                    android:layout_below="@id/temperature_heading"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/line_graph"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">
                </com.github.mikephil.charting.charts.LineChart>
            </RelativeLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>